<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/running_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="80dp"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".RunningActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical">


        <Chronometer
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/rubik_one"
            android:text="00:00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/timer_primary_kr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="시간"
            android:textAlignment="center"
            android:textColor="#B4B4B4"
            android:textSize="15dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/distance"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="left"
                android:text="거리"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/distance_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_one"
                android:gravity="left"
                android:text="2.1"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/steps"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="left"
                android:text="걸음"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/steps_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_one"
                android:gravity="left"
                android:text="5'11''"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/pace"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="left"
                android:text="페이스"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pace_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_one"
                android:gravity="left"
                android:text="5218"
                android:textSize="18dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="left"
                android:text="시간"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/time_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_one"
                android:gravity="left"
                android:text="10:40"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/cadence"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="left"
                android:text="케이던스"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/cadence_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_one"
                android:gravity="left"
                android:text="132"
                android:textSize="18dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_running"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_play_xml" />


</LinearLayout>